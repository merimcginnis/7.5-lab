<div class="max-w-4xl mx-auto p-6 bg-black text-white">
    <h1 class="text-3xl font-bold text-center mb-6 text-gold">Lab 7.5: API Data with Alpine.js</h1>

    <nav class="mb-8">
        <ul class="flex justify-center space-x-4">
            <li><a href="/" class="text-gold hover:text-white">Home</a></li>
            <li><a href="/ai-and-this-project" class="text-gold hover:text-white">AI and this Project</a></li>
        </ul>
    </nav>

    <!-- Random Users Section -->
    <section class="mb-8 p-4 bg-gray-900 rounded shadow">
      <h2 class="text-2xl font-semibold mb-4 text-gold">Random Users</h2>
      
      <div x-data="{ users: [], fetchUsers() { fetch('https://randomuser.me/api/?results=5')
          .then(response => response.json())
          .then(data => this.users = data.results) } }" x-init="fetchUsers()">
        
        <button @click="fetchUsers()" class="mb-4 px-4 py-2 bg-white text-black rounded">Randomize Users</button>

        <template x-for="user in users" :key="user.login.uuid">
          <div class="flex items-center p-3 border-b border-gray-700">
            <img :src="user.picture.medium" alt="User Image" class="w-12 h-12 rounded-full mr-4">
            <div>
              <p class="text-lg font-medium text-white" x-text="user.name.first + ' ' + user.name.last"></p>
              <p class="text-gray-400 text-sm" x-text="user.email"></p>
            </div>
          </div>
        </template>

      </div>
    </section>

    <!-- Random Dog Image Section -->
    <section class="p-4 bg-gray-900 rounded shadow">
      <h2 class="text-2xl font-semibold mb-4 text-gold">Random Dog Image</h2>

      <div x-data="{ dogImage: '', fetchDogImage() { fetch('https://dog.ceo/api/breeds/image/random')
          .then(response => response.json())
          .then(data => this.dogImage = data.message) } }" x-init="fetchDogImage()">
        
        <button @click="fetchDogImage()" class="mb-4 px-4 py-2 bg-white text-black rounded">Randomize Dog Image</button>

        <div class="flex justify-center">
          <img :src="dogImage" alt="Random Dog" class="rounded shadow-lg max-w-full h-auto">
        </div>
      </div>
    </section>

  </div>